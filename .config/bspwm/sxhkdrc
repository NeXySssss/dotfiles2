# vim: foldmethod=marker

# Bspwm {{{

# Focus window
super + {w,a,s,d}
	bspwm-focus {north,west,south,east}

# Focus next node
super {_,shift +} z
	bspc node {next,prev}.local --focus

# Switch to Nth desktop
super + {1-9,0}
	bspc desktop "$(bspc query -m focused -T | perl -pe 's|.*?\"name\":\"(.*?)\".*|\1|'):^{1-9,10}" --focus

# Switch to next/prev desktop
super + {_, shift +} Tab
	bspc desktop {next,prev}.local --focus

# Move window
super + shift + {w,a,s,d}
	bspwm-move {north,west,south,east}

# Move window to Nth desktop
super + shift + {1-9,0}
	bspc node --to-desktop "$(bspc query -m focused -T | perl -pe 's|.*?\"name\":\"(.*?)\".*|\1|'):^{1-9,0}" --focus

# Switch to monitor
alt + {w,a,s,d}
	bspc monitor {north,west,south,east} --focus

# Switch to Nth monitor
alt + {1-9,0}
	bspc monitor "^{1-9,0}" --focus

# Move window to monitor
alt + ctrl + {w,a,s,d}
	bspc node --to-monitor {north,west,south,east} --focus

# Move window to Nth monitor
alt + ctrl + {1-9,0}
	bspc node --to-monitor "^{1-9,0}" --focus

# Swap desktop with another monitor
super + alt + {w,a,s,d}
	bspwm-swap-desktop {north,west,south,east}

# Swap desktop with another monitor
super + alt + {1-9,0}
	bspwm-swap-desktop "^{1-9,0}"

# Expand window
super + ctrl + {w,a,s,d}
	bspc node -z {top 0 -20,left -20 0,bottom 0 20,right 20 0}

# Shrink window
super + ctrl + shift + {w,a,s,d}
	bspc node -z {bottom 0 -20,right -20 0,top 0 20,left 20 0}

# Tile window
super + n
	bspc node --state tiled

# Pseudo-tile window
super + t
	bspc node --state \~pseudo_tiled

# Float window
super + f
	bspc node --state \~floating

# Fullscreen window
super + shift + f
	bspc node --state \~fullscreen

# Cycle window states
super + m
	bspwm-cycle-state

# Sticky window
super + k
	bspc node --flag sticky

# Lock window
super + shift + l
	bspc node --flag sticky

# Lock window position
super + ctrl + l
	bspc node --flag sticky

# Close window
super + q
	bspc node -c

# Kill window
super + F4
	bspc node -k

# Preseleft direction
super + ctrl + alt + {a,s,w,d}
	bspc node -p {west,south,north,east}

# Preselect ratio
super + ctrl + alt + {1-9}
	bspc node -o 0.{1-9}

# Cancel preselection for focused desktop
super + control + alt + z
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Rotate desktop
super + ctrl + {_, shift + }x
	bspc node @/ --rotate {90,-90}

# Rotate focused node's parent
super + {_, shift + }x
	bspc node @parent --rotate {90,-90}

# Flip desktop
super + ctrl + {_, shift + }v
	bspc node @/ --flip {vertical,horizontal}

# Flip focused node's parent
super + {_, shift + }v
	bspc node @parent --flip {vertical,horizontal}

# }}}

# Launchers {{{

ctrl + alt + f
	x-www-browser

Print
	flameshot gui

super + l
	loginctl lock-session self

super + Return
	x-terminal-emulator

super + shift + Return
	x-file-manager

{alt,super} + space
	x-launcher

super + r
	x-launcher

super + p
	x-power-menu

super + e
	x-emoji-picker

ctrl + alt + c
	chatterino

super + control + q
	bspc quit

super + o
	mpv "$(xclip -sel c -o)"

# }}}

# Multimedia Keys {{{

XF86AudioRaiseVolume
		pamixer -i 5

XF86AudioLowerVolume
		pamixer -d 5

super + XF86AudioStop
		pamixer -t

XF86AudioMute
		pamixer -t

XF86AudioPlay
		playerctl play-pause

XF86AudioNext
		playerctl next

XF86AudioPrev
		playerctl previous

XF86AudioStop
		playerctl stop

XF86Tools
		x-launcher

XF86Calculator
		x-calculator

super + XF86AudioRaiseVolume
		light -A 10

super + XF86AudioLowerVolume
		light -U 10

# }}}

# Other {{{

# Reload bspwm config
super + control + r
	bspc wm -r

# Reload sxhkd
super + shift + r
	pkill -USR1 -x sxhkd

# }}}
