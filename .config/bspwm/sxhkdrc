# vim: foldmethod=marker

# Bspwm {{{

# Focus window
super + {w,a,s,d}
	bspwm-focus {north,west,south,east}

# Focus next window
super + {_,shift +} z
	bspc node {next,prev}.!hidden.window.local --focus

# Focus next node
super + ctrl + {_,shift +} z
	bspc node {next,prev}.!hidden.local --focus

# Switch to Nth desktop
super + {1-9,0}
	bspc desktop "$(bspc query -m focused -T | perl -pe 's|.*?\"name\":\"(.*?)\".*|\1|'):^{1-9,10}" --focus

# Switch to next/prev desktop
super + {_, shift +} Tab
	bspc desktop {next,prev}.local --focus

# Move window
super + shift + {w,a,s,d}
	bspwm-move {north,west,south,east}

# Move window to Nth desktop
super + shift + {1-9,0}
	bspc node --to-desktop "$(bspc query -m focused -T | perl -pe 's|.*?\"name\":\"(.*?)\".*|\1|'):^{1-9,10}" --focus

# Focus monitor
ctrl + alt + {w,a,s,d}
	bspc monitor {north,west,south,east} --focus

# Focus Nth monitor
ctrl + alt + {1-9,0}
	bspc monitor "^{1-9,10}" --focus

# Move window to monitor
ctrl + alt + x; {w,a,s,d}
	bspc node --to-monitor {north,west,south,east} --focus

# Move window to Nth monitor
ctrl + alt + x; {1-9,0}
	bspc node --to-monitor "^{1-9,10}" --focus

# Swap desktop with another monitor
ctrl + alt + z; {w,a,s,d}
	bspwm-swap-desktop {north,west,south,east}

# Swap desktop with another monitor
ctrl + alt + z; {1-9,0}
	bspwm-swap-desktop "^{1-9,10}"

# Expand window
super + ctrl + {w,a,s,d}
	bspc node -z {top 0 -20,left -20 0,bottom 0 20,right 20 0}

# Shrink window
super + ctrl + shift + {w,a,s,d}
	bspc node -z {bottom 0 -20,right -20 0,top 0 20,left 20 0}

# Set window state
super + {n,t,f,shift + f}
	bspc node --state \~{tiled,pseudo_tiled,floating,fullscreen}

# Cycle window states
super + m
	bspwm-cycle-state

# Sticky window
super + k
	bspc node --flag sticky

# Lock window
super + shift + l
	bspc node --flag locked

# Lock window position
super + ctrl + l
	bspc node --flag private

# Close window
super + q
	bspc node -c

# Kill window
super + F4
	bspc node -k

# Preseleft direction
super + ctrl + alt + {a,s,w,d}
	bspc node -p {west,south,north,east}

# Preselect ratio
super + ctrl + alt + {1-9}
	bspc node -o 0.{1-9}

# Cancel preselection for focused desktop
super + ctrl + alt + z
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Rotate desktop
super + ctrl + {_, shift + }x
	bspc node @/ --rotate {90,-90}

# Rotate focused node's parent
super + {_, shift + }x
	bspc node @parent --rotate {90,-90}

# Flip desktop
super + ctrl + {_, shift + }v
	bspc node @/ --flip {vertical,horizontal}

# Flip focused node's parent
super + {_, shift + }v
	bspc node @parent --flip {vertical,horizontal}

# }}}

# Launchers {{{

ctrl + alt + f
	x-www-browser

Print
	flameshot gui

super + l
	loginctl lock-session self

super + Return
	x-terminal-emulator

super + shift + Return
	x-file-manager

super + space
	x-launcher

super + r
	x-launcher

super + p
	x-power-menu

super + e
	x-emoji-picker

ctrl + alt + c
	chatterino

super + ctrl + q
	bspc quit

super + o
	mpv "$(xclip -sel c -o)"

# }}}

# Multimedia Keys {{{

XF86AudioRaiseVolume
		pamixer -i 5

XF86AudioLowerVolume
		pamixer -d 5

super + XF86AudioStop
		pamixer -t

XF86AudioMute
		pamixer -t

XF86AudioPlay
		playerctl play-pause

XF86AudioNext
		playerctl next

XF86AudioPrev
		playerctl previous

XF86AudioStop
		playerctl stop

XF86Tools
		x-launcher

XF86Calculator
		x-calculator

super + XF86AudioRaiseVolume
		light -A 10

super + XF86AudioLowerVolume
		light -U 10

# }}}

# Other {{{

# Reload bspwm config
super + ctrl + r
	bspc wm -r

# Reload sxhkd
super + shift + r
	pkill -USR1 -x sxhkd

# }}}
