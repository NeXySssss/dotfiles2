#!/usr/bin/env sh

if bspc query --tree --node | grep --silent '"state":"floating"'; then
	case $1 in
		left|west) bspc node -v -20 0 ;;
		down|south) bspc node -v 0 +20 ;;
		right|east) bspc node -v +20 0 ;;
		up|north) bspc node -v 0 -20 ;;
	esac
else
	case $1 in
		left|west) bspc node --swap west ;;
		down|south) bspc node --swap south ;;
		right|east) bspc node --swap east ;;
		up|north) bspc node --swap north ;;
	esac
fi

